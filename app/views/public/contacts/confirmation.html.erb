<div class="main-contents">
  <h1 class='title-contents'><%= I18n.t('contacts.confirmation.title') %></h1>
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1">
      <table class="table responsive-table">
        <tbody>
          <tr>
            <td class="text-right contacts-label">お名前</td>
            <td><%= @contact.name %></td>
          </tr>
          <tr>
            <td class="text-right mt-3 contacts-label">メールアドレス</td>
            <td><%= @contact.email %></td>
          </tr>
          <tr>
            <td class="text-right mt-3 contacts-label">件名</td>
            <td><%= @contact.subject %></td>
          </tr>
          <tr>
            <td class="text-right mt-3">メッセージ</td>
            <td style="white-space: pre-wrap;"><%= @contact.message %></td>
          </tr>
        </tbody>
      </table>

      <div class="d-flex">
        <div class="mr-md-3">
        <%= form_with model: @contact, url: public_contacts_path, method: :post, local: true, data: { turbo: false }  do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :subject %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '送信', class: "btn btn-primary" %></div>
        <% end %>
        </div>

        <div>
        <%= form_with model: @contact, url: back_public_contacts_path, local: true, data: { turbo: false }  do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :subject %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '入力画面に戻る', class: "btn btn-primary" %></div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>