<tr id="comment-<%= comment.id %>">
  <td style="width: 60px">
    <%= image_tag "Golf_sample.jpg", class: "rounded-circle", width: 50, height: 50 %>
  </td>
  <td>
    <h3 class="small"><%= comment.user.name %> </h3>
    <p><%= simple_format(comment.body) %></p>
  </td>
  <% if current_user.own?(comment) && comment.persisted? %>
    <td class="action">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <%= link_to shared_video_comment_path(@shared_video, comment), class: 'delete-comment-link', data: {turbo_method: :delete, turbo_confirm: "削除しますか？" } do %>
            <i class="bi bi-trash-fill icon-large"></i>
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>