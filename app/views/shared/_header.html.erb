          </div>
        </li>
        <li class='nav-item dropdown'>
          <%= link_to t('header.diagnosis'), '#', class: 'nav-link' %>
        </li>
        <li class='nav-item dropdown'>
          <%= link_to t('header.recommended'), '#', class: 'nav-link' %>
        </li>
        <li class='nav-item dropdown '>
          <%= link_to('#', class: 'nav-link', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true',  expanded: 'false' }, id: 'header-profile' ) do %>
            <i class="bi bi-house-door-fill"></i>
          <% end %>
          <div class='dropdown-menu dropdown-menu-end'>
            <div class='dropdown-item'><%= "ユーザー名" %></div>
            <div class='dropdown-divider'></div>
            <%= link_to t('header.profile'), '#', class: 'dropdown-item' %>
            <%= link_to t('header.logout'), "#", class: 'dropdown-item', data: { turbo_method: :delete } %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
