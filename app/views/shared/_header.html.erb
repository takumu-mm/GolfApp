<header>
  <div class = 'header-top'>
    <h1>GolfUp</h1>
    <div class = 'header-btn'>
      <%= link_to 'ログイン' , "#", class: 'btn btn-primary' %>
      <%= link_to '新規登録' , "#", class: 'btn btn-primary' %>
    </div>
  </div>
  <nav class='navbar navbar-expand-lg navigation'>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>
    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <li class='nav-item dropdown '>
          <%= link_to t('header.basic'), '#', class: 'nav-link', 'data-bs-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'false' %>
          <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to t('header.address') , category_path('アドレス'), class: 'dropdown-item' %>
            <%= link_to t('header.grip') , category_path('握り方'), class: 'dropdown-item' %>
            <%= link_to t('header.basic_swing') , category_path('基本スイング'), class: 'dropdown-item' %>
          </div>
        </li>
        <li class='nav-item dropdown '>
          <%= link_to t('header.club'), '#', class: 'nav-link', 'data-bs-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'false' %>
          <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to t('header.driver') , category_path('ドライバー'), class: 'dropdown-item' %>
            <%= link_to t('header.iron') , category_path('アイアン'), class: 'dropdown-item' %>
            <%= link_to t('header.wood') , category_path('ウッド'), class: 'dropdown-item' %>
            <%= link_to t('header.utility') , category_path('ユーティリティ'), class: 'dropdown-item' %>
            <%= link_to t('header.putter') , category_path('パター'), class: 'dropdown-item' %>
          </div>
        </li>
        <li class='nav-item dropdown '>
          <%= link_to t('header.environment'), '#', class: 'nav-link', 'data-bs-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'false' %>
          <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to t('header.bunker') , category_path('バンカー'), class: 'dropdown-item' %>
            <%= link_to t('header.rough') , category_path('ラフ'), class: 'dropdown-item' %>
            <%= link_to t('header.strongwind') , category_path('強風'), class: 'dropdown-item' %>
            <%= link_to t('header.rain') , category_path('雨'), class: 'dropdown-item' %>
          </div>
        </li>
        <li class='nav-item dropdown '>
          <%= link_to t('header.green_around'), '#', class: 'nav-link', 'data-bs-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'false' %>
          <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to t('header.approach') , category_path('アプローチ'), class: 'dropdown-item' %>
            <%= link_to t('header.lob_shot') , category_path('ロブショット'), class: 'dropdown-item' %>
            <%= link_to t('header.ground_ball') , category_path('転がし'), class: 'dropdown-item' %>
          </div>
        </li>
        </li>
        <li class='nav-item dropdown '>
          <%= link_to t('header.shot_miss'), '#', class: 'nav-link', 'data-bs-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'false' %>
          <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to t('header.hook') , category_path('フック'), class: 'dropdown-item' %>
